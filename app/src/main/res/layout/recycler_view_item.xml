<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="8dp"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewShape"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_margin="22dp"
            android:background="@drawable/blinking_shape"
            tools:srcCompat="@drawable/circle" />

        <TextView
            android:id="@+id/timerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:padding="4dp"
            android:textColor="#7E7E7E"
            android:textSize="28sp"
            tools:text="00:00:00" />

        <com.rsschool.pomodoro.CustomProgressBar
            android:id="@+id/progressBar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:custom_color="@color/main_red"
            android:indeterminateOnly="false"
            android:progress="0"
            tools:progress="80"
            android:progressDrawable="@drawable/progress_shape" />

        <Button
            android:id="@+id/itemButton"
            style="@style/styleButton"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            tools:text="START" />

        <ImageButton
            android:id="@+id/imageButtonDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="2dp"
            android:background="@android:drawable/divider_horizontal_dark"
            android:padding="10dp"
            app:srcCompat="@android:drawable/ic_menu_delete"
            app:tint="#EF4949" />


    </LinearLayout>

</androidx.cardview.widget.CardView>